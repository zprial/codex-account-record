{
  "name": "@codex-account-record/server",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint --ext .ts src",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "cross-env NODE_ENV=test DATABASE_URL=\"file:./server/data/test.db\" vitest run --run"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^2.0.16",
    "cross-env": "^7.0.3",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18"
  }
}
